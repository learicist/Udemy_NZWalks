@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-contain-end">
    <a 
        class="btn btn-secondary" 
        asp-controller="Regions" 
        asp-action="Add">
            Add Region
    </a>
</div>

@* @if (ViewBag.Response is not null) { *@
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var walk in Model)
            {
                <tr>
                    <td>@walk.Id</td>
                    <td>@walk.Code</td>
                    <td>@walk.Name</td>
                    <td>
                        <a 
                            asp-controller="Regions" 
                            asp-action="Edit"
                            asp-route-id="@walk.Id"
                            class="btn btn-light">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
@*}*@